{
  "expo": {
    "name": "Mini POS",
    "slug": "pos",
    "version": "4.2.2",
    "orientation": "portrait",
    "icon": "./assets/images/pos.png",
    "scheme": "pos",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pyaephyonyo.pos",
      "buildNumber": "7"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/pos.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/NotoSansMyanmar-Regular.ttf",
            "./assets/fonts/NotoSansMyanmar-Bold.ttf",
            "./assets/fonts/NotoSansMyanmar-Medium.ttf",
            "./assets/fonts/Padauk-Regular.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "NotoSansMyanmar",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/NotoSansMyanmar-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/NotoSansMyanmar-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/NotoSansMyanmar-Bold.ttf",
                    "weight": 700
                  }
                ]
              },
              {
                "fontFamily": "Padauk",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Padauk-Regular.ttf",
                    "weight": 400
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/NotoSansMyanmar-Regular.ttf",
              "./assets/fonts/NotoSansMyanmar-Medium.ttf",
              "./assets/fonts/NotoSansMyanmar-Bold.ttf",
              "./assets/fonts/Padauk-Regular.ttf"
            ]
          }
        }
      ],
      "expo-web-browser",
      "expo-sqlite",
      [
        "./plugins/react-native-bluetooth-classic.js",
        {
          "peripheralUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing.",
          "alwaysUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/pos.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "74480d35-2bb3-4772-bf62-dfed94231f6c"
      }
    },
    "android": {
      "package": "com.pyaephyonyo.pos",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/pos.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 4,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.CAMERA"
      ]
    }
  }
}
