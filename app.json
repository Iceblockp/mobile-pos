{
  "expo": {
    "name": "Mini POS",
    "slug": "pos",
    "version": "4.5.4",
    "orientation": "default",
    "icon": "./assets/images/pos.png",
    "scheme": "pos",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/pos.png",
      "bundleIdentifier": "com.pyaephyonyo.pos",
      "buildNumber": "9",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing.",
        "NSBluetoothWhileUsingAppUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing.",
        "NSCameraUsageDescription": "This app uses the camera to take photos of products for inventory management.",
        "NSPhotoLibraryUsageDescription": "This app accesses the photo library to select product images."
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/pos.png"
    },
    "android": {
      "package": "com.pyaephyonyo.pos",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/pos.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 11,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.CAMERA"
      ],
      "blockedPermissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/NotoSansMyanmar-Regular.ttf",
            "./assets/fonts/NotoSansMyanmar-Bold.ttf",
            "./assets/fonts/NotoSansMyanmar-Medium.ttf",
            "./assets/fonts/Padauk-Regular.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "NotoSansMyanmar",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/NotoSansMyanmar-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/NotoSansMyanmar-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/NotoSansMyanmar-Bold.ttf",
                    "weight": 700
                  }
                ]
              },
              {
                "fontFamily": "Padauk",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Padauk-Regular.ttf",
                    "weight": 400
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "packagingOptions": {
              "pickFirst": ["**/libc++_shared.so", "**/libjsc.so"]
            }
          }
        }
      ],
      [
        "expo-system-ui",
        {
          "userInterfaceStyle": "automatic",
          "statusBarStyle": "auto",
          "statusBarBackgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-sqlite",
      [
        "./plugins/react-native-bluetooth-classic.js",
        {
          "peripheralUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing.",
          "alwaysUsageDescription": "This app uses Bluetooth to connect to thermal printers for receipt printing."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/pos.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "74480d35-2bb3-4772-bf62-dfed94231f6c"
      }
    }
  }
}
